generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// =========================
// ENUMS
// =========================
//

enum UserRole {
  CUSTOMER
  CHEF
  ADMIN
}

enum TiffinSize {
  HALF
  FULL
}

enum FoodType {
  VEG
  NON_VEG
}

enum OrderStatus {
  PLACED
  ACCEPTED
  PREPARED
  OUT_FOR_DELIVERY
  DELIVERED
}

enum PaymentMode {
  UPI
  COD
}

//
// =========================
// MODELS
// =========================
//

model User {
  id           String   @id @default(uuid())
  role         UserRole
  name         String
  email        String   @unique
  phone        String   @unique
  passwordHash String
  isActive     Boolean  @default(false)
  createdAt    DateTime @default(now())

  otps      Otp[]
  orders    Order[]
  cart      Cart?
  addresses Address[]
}

//
// -------------------------
// OTP
// -------------------------
//

model Otp {
  id        String   @id @default(uuid())
  userId    String
  code      String
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

//
// -------------------------
// ADDRESS
// -------------------------
//

model Address {
  id     String @id @default(uuid())
  userId String

  receiverName  String
  contactNumber String
  houseNumber   String
  sector        String
  landmark      String?
  postcode      String
  mapUrl        String?

  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  orders Order[]

  @@index([userId])
}

//
// -------------------------
// SINGLE KITCHEN
// -------------------------
//

model Kitchen {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())

  menuItems MenuItem[]
  orders    Order[]
}

//
// -------------------------
// CATEGORY
// -------------------------
//

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  imageUrl  String?
  createdAt DateTime @default(now())

  menuItems MenuItem[]
}

//
// -------------------------
// MENU ITEMS
// -------------------------
//

model MenuItem {
  id         String @id @default(uuid())
  kitchenId  String
  categoryId String

  name        String
  description String?
  price       Int

  foodType   FoodType
  tiffinSize TiffinSize?
  imageUrl   String?

  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())

  kitchen   Kitchen         @relation(fields: [kitchenId], references: [id])
  category  Category        @relation(fields: [categoryId], references: [id])
  nutrition NutritionFact[]

  cartItems  CartItem[]
  orderItems OrderItem[]

  @@index([kitchenId])
  @@index([categoryId])
}

//
// -------------------------
// NUTRITION FACTS (KEYâ€“VALUE)
// -------------------------
//

model NutritionFact {
  id         String  @id @default(uuid())
  menuItemId String
  key        String
  value      String
  unit       String?

  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([menuItemId])
}

//
// -------------------------
// CART
// -------------------------
//

model Cart {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User       @relation(fields: [userId], references: [id])
  items CartItem[]
}

//
// -------------------------
// CART ITEMS
// -------------------------
//

model CartItem {
  id         String   @id @default(uuid())
  cartId     String
  menuItemId String
  quantity   Int
  price      Int
  createdAt  DateTime @default(now())

  cart     Cart     @relation(fields: [cartId], references: [id])
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@unique([cartId, menuItemId])
}

//
// -------------------------
// ORDERS
// -------------------------
//

model Order {
  id        String @id @default(uuid())
  userId    String
  kitchenId String
  addressId String

  status      OrderStatus
  subtotal    Int
  totalAmount Int
  paymentMode PaymentMode
  createdAt   DateTime    @default(now())

  user    User        @relation(fields: [userId], references: [id])
  kitchen Kitchen     @relation(fields: [kitchenId], references: [id])
  address Address     @relation(fields: [addressId], references: [id])
  items   OrderItem[]
  payment Payment?
}

//
// -------------------------
// ORDER ITEMS
// -------------------------
//

model OrderItem {
  id         String @id @default(uuid())
  orderId    String
  menuItemId String
  quantity   Int
  price      Int

  order    Order    @relation(fields: [orderId], references: [id])
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([menuItemId])
}

//
// -------------------------
// PAYMENT
// -------------------------
//

model Payment {
  id        String      @id @default(uuid())
  orderId   String      @unique
  mode      PaymentMode
  status    String
  createdAt DateTime    @default(now())

  order Order @relation(fields: [orderId], references: [id])
}
