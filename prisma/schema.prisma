generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// ENUMS
// =========================


enum UserRole {
  CUSTOMER
  CHEF
  ADMIN
}

enum TiffinSize {
  HALF
  FULL
}

enum OrderStatus {
  PLACED
  ACCEPTED
  PREPARED
  OUT_FOR_DELIVERY
  DELIVERED
}

enum PaymentMode {
  UPI
}

// =========================
// MODELS
// =========================

model User {
  id           String   @id @default(uuid())
  role         UserRole
  name         String
  email        String   @unique
  phone        String   @unique
  passwordHash String
  isActive     Boolean  @default(false)
  createdAt    DateTime @default(now())

  otps         Otp[]
  orders       Order[]
  cart         Cart?    // ✅ ADD THIS
}

// -------------------------
// OTP
// -------------------------
model Otp {
  id        String   @id @default(uuid())
  userId    String
  code      String
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

// -------------------------
// SINGLE KITCHEN
// -------------------------

model Kitchen {
  id         String   @id @default(uuid())
  name       String
  description String?
  createdAt  DateTime @default(now())

  menuItems  MenuItem[]
  orders     Order[]
}

// -------------------------
// MENU ITEMS
// -------------------------
model MenuItem {
  id          String   @id @default(uuid())
  kitchenId   String
  name        String
  description String?
  price       Int
  tiffinSize  TiffinSize
  imageUrl    String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())

  kitchen     Kitchen  @relation(fields: [kitchenId], references: [id])
  cartItems   CartItem[] // ✅ ADD THIS
  @@index([kitchenId])
}
// -------------------------
// Carts
// -------------------------
model Cart {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User       @relation(fields: [userId], references: [id])
  items CartItem[]
}
// -------------------------
// Cart Items
// -------------------------
model CartItem {
  id         String   @id @default(uuid())
  cartId    String
  menuItemId String
  quantity  Int
  price     Int       // snapshot price
  createdAt DateTime @default(now())

  cart     Cart     @relation(fields: [cartId], references: [id])
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@unique([cartId, menuItemId])
}


// -------------------------
// ORDERS
// -------------------------
model Order {
  id             String      @id @default(uuid())
  userId         String
  kitchenId      String
  status         OrderStatus
  subtotal       Int
  totalAmount    Int
  paymentMode    PaymentMode
  createdAt      DateTime    @default(now())

  user           User        @relation(fields: [userId], references: [id])
  kitchen        Kitchen     @relation(fields: [kitchenId], references: [id])
  items          OrderItem[]
  payment        Payment?
}

// -------------------------
// ORDER ITEMS
// -------------------------
model OrderItem {
  id          String @id @default(uuid())
  orderId     String
  menuItemId  String
  quantity    Int
  price       Int

  order       Order @relation(fields: [orderId], references: [id])
}

// -------------------------
// PAYMENT
// -------------------------
model Payment {
  id        String      @id @default(uuid())
  orderId  String      @unique
  mode      PaymentMode
  status    String
  createdAt DateTime   @default(now())

  order     Order      @relation(fields: [orderId], references: [id])
}
